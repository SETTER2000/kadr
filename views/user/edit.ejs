<div class=" col-md-12">
    <form action="/user/update/<%= user.id %>" method="post" class="form-signin">
    <h3>Редактировать</h3>
    <input value="<%= user.last_name %>" type="text" name="name" class="form-control">
    <input value="<%= user.login %>" type="text" name="title" class="form-control">
    <input value="<%= user.email %>" type="text" name="email" class="form-control">
    <input value="Сохранить" type="submit" class="btn btn-lg btn-primary btn-block">
    <input value="<%= _csrf %>" type="hidden" name="_csrf" >
</form>
    </div>