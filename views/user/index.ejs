<div class=" col-md-12">
    <h3>Сотрудники</h3>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>ДР</th>
            <th>Логин</th>
            <th>Email</th>
            <th></th>
            <th></th>
        </tr>
        <% _.each(users, function (user) {%>
        <tr data-id="<%= user.id %>" data-model="user">
            <td><%= user.id %></td>
            <td><%= user.last_name %></td>
            <td><%= user.first_name %></td>
            <td><%= user.patronymic_name %></td>
            <td><%= user.birthday.getDate() %>.<%= user.birthday.getMonth()+1 %>.<%= user.birthday.getUTCFullYear() %></td>
            <td><%= user.login %></td>
            <td><%= user.email %></td>
            <td>
                <a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary">
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                </a>
                <a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
            <td>

                <form action="/user/destroy/<%= user.id %>" method="post">
                    <input type="hidden" name="_method" value="delete">
                    <button type="submit" class="btn btn-sm btn-danger" >
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>

                    <input type="hidden" name="_csrf" value="<%= _csrf %>" >
                </form>
            </td>
        </tr>
        <% }); %>
    </table>
</div>